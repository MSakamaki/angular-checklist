{
  "hosting": {
    "public": "dist/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/en-US/**",
        "destination": "/en-US/index.html"
      },
      {
        "source": "/ja/**",
        "destination": "/ja/index.html"
      },
      {
        "source": "**",
        "destination": "/en-US/index.html"
      }
    ],
    "redirects": [{
      "source" : "/",
      "destination" : "/en-US",
      "type" : 301
    }]
  }
}
